<!-- BOTÓN HACIA ARRIBA -->
<button id="scrollToTopBtn" title="Ir arriba"></button>

<script>
  // Mostrar u ocultar el botón según la posición del scroll
  const scrollToTopBtn = document.getElementById('scrollToTopBtn');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 300) {
      scrollToTopBtn.style.display = 'flex';
    } else {
      scrollToTopBtn.style.display = 'none';
    }
  });

  // Al hacer clic, subir suavemente al inicio
  scrollToTopBtn.addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });

  // ====== MODALES ======
  const termsModal = document.getElementById('termsModal');
  const cookiesModal = document.getElementById('cookiesModal');
  const openTermsBtn = document.getElementById('openTerms');
  const openCookiesBtn = document.getElementById('openCookies');
  const closeButtons = document.querySelectorAll('.close-modal');

  // Abrir modal de términos
  openTermsBtn.addEventListener('click', (e) => {
    e.preventDefault();
    termsModal.classList.add('active');
    document.body.style.overflow = 'hidden';
  });

  // Abrir modal de cookies
  openCookiesBtn.addEventListener('click', (e) => {
    e.preventDefault();
    cookiesModal.classList.add('active');
    document.body.style.overflow = 'hidden';
  });

  // Cerrar modales con botón X
  closeButtons.forEach(button => {
    button.addEventListener('click', () => {
      const modalId = button.getAttribute('data-modal');
      const modal = document.getElementById(modalId);
      modal.classList.remove('active');
      document.body.style.overflow = 'auto';
    });
  });

  // Cerrar modales al hacer clic fuera del contenido
  window.addEventListener('click', (e) => {
    if (e.target === termsModal) {
      termsModal.classList.remove('active');
      document.body.style.overflow = 'auto';
    }
    if (e.target === cookiesModal) {
      cookiesModal.classList.remove('active');
      document.body.style.overflow = 'auto';
    }
  });

  // Cerrar modales con tecla ESC
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      termsModal.classList.remove('active');
      cookiesModal.classList.remove('active');
      document.body.style.overflow = 'auto';
    }
  });
</script>

