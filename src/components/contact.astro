<style>
:root {
  --color-primario: #c75b7a;
  --color-secundario: #ffb6c1;
  --color-acento: #ffc0cb;
  --color-texto-principal: #8b5a6f;
  --color-texto-secundario: #886173;
  --color-texto-terciario: #d97798;
  --color-texto-oscuro: #5e042b;
  --color-texto-claro: #ffffff;
  --color-fondo: #fff5f7;
  --sombra-suave: rgba(255, 182, 193, 0.4);
  --sombra-intensa: rgba(199, 91, 122, 0.3);
  --font-principal: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-display: 'Playfair Display', Georgia, serif;
  --font-moderna: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.contact-section {
  width: 100%;
  padding: 6rem 1.5rem;
  background: url(/fondo-prhase.png);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color:#fff5f7;
  display: flex;
  justify-content: center;
}

.contact-container {
  max-width: 1200px;
  width: 100%;
  text-align: center;
  position: relative;
}

/* Título */
.contact-title {
  font-size: clamp(2.6rem, 5vw, 3.7rem);
  margin-bottom: 1rem;
  background: linear-gradient(90deg, #c75b7a, #ff8fb8, #ffa5c0);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-family: var(--font-moderna);
  font-weight: 800;
  letter-spacing: -1px;
}

.contact-subtitle {
  font-size: 1.4rem;
  color: var(--color-texto-oscuro);
  margin-bottom: 4rem;
  font-family: var(--font-moderna);
  opacity: 0.85;
}

/* GRID DE REDES SOCIALES */
.social-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.social-card {
  background: white;
  border-radius: 22px;
  padding: 2.5rem 1.5rem;
  text-decoration: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  box-shadow: 0 10px 30px rgba(199, 91, 122, 0.18);
  transition: transform 0.35s ease, box-shadow 0.35s ease;
  position: relative;
  overflow: hidden;
}

.social-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5px;
  background: linear-gradient(90deg, #c75b7a, #ff8fb8, #ffa5c0);
  transform: scaleX(0);
  transition: transform 0.35s ease;
}

.social-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 15px 40px rgba(199, 91, 122, 0.28);
}

.social-card:hover::before {
  transform: scaleX(1);
}

/* ICONO */
.social-icon-wrapper {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: linear-gradient(135deg, #fff0f4 0%, #ffe8f0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 5px 15px rgba(199, 91, 122, 0.15);
  transition: transform 0.3s ease;
}

.social-card:hover .social-icon-wrapper {
  transform: scale(1.1) rotate(5deg);
}

.social-icon {
  width: 45px;
  height: 45px;
  object-fit: contain;
}

/* TEXTO */
.social-name {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--color-primario);
  font-family: var(--font-moderna);
  margin: 0;
}

.social-handle {
  font-size: 1rem;
  color: var(--color-texto-secundario);
  font-family: var(--font-moderna);
  margin: 0;
  opacity: 0.8;
}

/* RESPONSIVE */
@media (max-width: 900px) {
  .social-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .contact-subtitle {
    margin-bottom: 3rem;
  }
}

@media (max-width: 500px) {
  .social-grid {
    grid-template-columns: 1fr;
  }
}
</style>

