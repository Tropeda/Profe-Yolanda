<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Orbitron:wght@400;500;700;900&display=swap" rel="stylesheet">

<div id="gamingZoneModal" class="gaming-modal">
  <div class="gaming-modal-content">
    <button id="closeGamingZone" class="close-gaming-modal">×</button>
    
    <section class="gaming-hero">
      <div class="overlay"></div>
      <div class="content-container">
        <div class="title-wrapper">
          <h1 class="main-title">Gaming Zone</h1>
          <div class="title-particle"></div>
          <div class="title-particle"></div>
          <div class="title-particle"></div>
          <div class="title-particle"></div>
          <div class="title-particle"></div>
          <div class="title-particle"></div>
          <div class="title-particle"></div>
          <div class="title-particle"></div>
          <div class="title-particle"></div>
        </div>

        <div class="top-grid">
          <div class="card video-card">
            <a href="https://www.youtube.com/watch?v=DtkLhjlKHgc" target="_blank" rel="noopener noreferrer" class="video-container">
              <img 
                src="https://img.youtube.com/vi/DtkLhjlKHgc/maxresdefault.jpg" 
                alt="Portada del video" 
                class="video-thumbnail"
              />
              <div class="video-play-button"></div>
            </a>
          </div>

          <div class="card info-card">
            <h2>Level Up Your Spanish!</h2>
            
